<?xml version="1.0"?>
<canvas debug="true">

	<dataset name="lesContacts">
		<personne id="p1" nom="le blanc" prenom="jacques" email="leblanc@irisa.fr" />
		<personne id="p2" nom="Dupont" prenom="pierre" email="pierrot@ifsic.fr" />
		<personne id="p3" nom="durant" prenom="paul" email="polot@irisa.fr" />
		<personne id="p4" nom="le cozig" prenom="hervÃ©" email="herve@wanadoo.fr" />
		<personne id="p5" nom="lemeur" prenom="duduche" email="leGrand@wanadoo.fr" />
	</dataset>

	<class name="contact">
		<attribute name="id" />
		<window align="left" name="main" width="500" height="300">
			<simplelayout axis="x" spacing="0" />		
			<view>
				<simplelayout axis="y" spacing="0" />
				<grid datapath="lesContacts:/" contentdatapath="personne" showhscroll="true" shownitems="3">
					<handler name="onselect">
						showdata.setAttribute("visible", "true");
						var id = this.getSelection()[0].getNodeAttribute("id");
						showdata.setAttribute("datapath", "lesContacts:/personne[@id='"+id+"']/");
					</handler>
				</grid>
				<gridtext datapath="@id" editable="false">Id</gridtext>
				<gridtext datapath="@nom" >Nom</gridtext>
			</view>
			<view id="showdata" visible="false" width="200">
				<simplelayout axis="y" spacing="0" />
				<view width="200">
					<text align="left"><b>Id</b></text>
					<edittext datapath="@id" align="right" enabled="false"/>
				</view>
				<view width="200">
					<text align="left"><b>Prenom</b></text>
					<edittext datapath="@nom" align="right"/>
				</view>
				<view width="200">
					<text align="left"><b>Nom</b></text>
					<edittext datapath="@prenom" align="right"/>
				</view>
				<view width="200">
					<text align="left"><b>Nom</b></text>
					<edittext datapath="@email" align="right"/>
				</view>
			</view>
		</window>
	</class>

	<contact id="contact" />

</canvas>
